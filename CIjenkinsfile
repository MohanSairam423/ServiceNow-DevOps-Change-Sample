def releasePipelineName = "DevOps CD Pipeline" //Ensure you enter the correct release pipeline name that you have created in Jenkins

def packageName = "app-devops-package-ci.war"

pipeline {
	agent any
	
	tools {
		maven 'Maven'
	}

	environment {
		SCANNER_HOME = tool 'sonarScanner'
